    private List<Product> FilteredProducts
    {
        get
        {
            var filtered = products.AsEnumerable();

            // Search filter
            if (!string.IsNullOrEmpty(filters.SearchTerm))
            {
                filtered = filtered.Where(p => 
                    p.Name.Contains(filters.SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    p.Description.Contains(filters.SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    p.Tags.Any(t => t.Contains(filters.SearchTerm, StringComparison.OrdinalIgnoreCase))
                );
            }

            // Category filter
            if (filters.Category != "all")
            {
                filtered = filtered.Where(p => p.Category == filters.Category);
            }

            // Price filter
            filtered = filtered.Where(p => p.Price <= filters.MaxPrice);

            // Sort
            filtered = filters.SortBy switch
            {
                "name_desc" => filtered.OrderByDescending(p => p.Name),
                "price" => filtered.OrderBy(p => p.Price),
                "price_desc" => filtered.OrderByDescending(p => p.Price),
                "rating" => filtered.OrderByDescending(p => p.Rating),
                _ => filtered.OrderBy(p => p.Name)
            };

            return filtered.ToList();
        }
    }

    private void OnSearch(ChangeEventArgs e)
    {
        filters.SearchTerm = e.Value?.ToString() ?? "";
        StateHasChanged();
    }

    private void OnCategoryChange(string category)
    {
        filters.Category = category;
        StateHasChanged();
    }

    private void OnPriceChange(ChangeEventArgs e)
    {
        if (decimal.TryParse(e.Value?.ToString(), out decimal value))
        {
            filters.MaxPrice = value;
            StateHasChanged();
        }
    }

    private void OnSortChange(ChangeEventArgs e)
    {
        filters.SortBy = e.Value?.ToString() ?? "name";
        StateHasChanged();
    }

    private void ResetFilters()
    {
        filters = new FilterModel();
        StateHasChanged();
    }

    private void ToggleCart()
    {
        showCart = !showCart;
    }

    private void AddToCart(Product product)
    {
        var existingItem = cartItems.FirstOrDefault(x => x.Product.Id == product.Id);
        if (existingItem != null)
        {
            existingItem.Quantity++;
        }
        else
        {
            cartItems.Add(new CartItem { Product = product, Quantity = 1 });
        }
        StateHasChanged();
    }

    private void RemoveFromCart(Product product)
    {
        var item = cartItems.FirstOrDefault(x => x.Product.Id == product.Id);
        if (item != null)
        {
            cartItems.Remove(item);
        }
        StateHasChanged();
    }

    private void UpdateQuantity(Product product, int change)
    {
        var item = cartItems.FirstOrDefault(x => x.Product.Id == product.Id);
        if (item != null)
        {
            item.Quantity += change;
            if (item.Quantity <= 0)
            {
                cartItems.Remove(item);
            }
        }
        StateHasChanged();
    }
